extends layout

block content
  h1= title
  #container
    each item in list
      .image-block
        span.lot-num= item.handle.toUpperCase()
        div.item-id= item.id
        div.lot-name!= item.title
        if item.image
          img.prod-image.thumbnail.gallery(src=item.image.src alt=item.title data-featherlight=item.image.src) 
        else
          div= "NO IMAGE"		  
        div.description!= item.body_html
        +link("https://"+shopname+".myshopify.com/products/"+item.handle, item.title)


